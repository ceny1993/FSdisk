{
  "configuration": {
    "appenders": {
      "Console": {
        "name": "console",
        "PatternLayout": {"pattern": "[%d{yyyy-MM-dd HH:mm:ss} %C %L %p] %m%n"}
      },
      "RollingFile": {
        "name":"file",
        "fileName":"${sys:logDir}/app.log",
        "filePattern":"${sys:logDir}/%d{yyyy-MM-dd}.log",
        "PatternLayout": {"pattern": "[%d{yyyy-MM-dd HH:mm:ss} %C %L %p] %m%n"},
        "Policies":{
          "TimeBasedTriggeringPolicy":{"interval":"1","modulate":"true"}
        }
      }
    },

    "loggers": {
      "logger":{
        "name":"specialClassName",
        "level":"trace",
        "additivity":"false",
        "AppenderRef":[{"ref": "STDOUT"}]
      },
      "root": {
        "level": "trace",
        "AppenderRef": [
          { "ref": "console" },
          { "ref": "file" }
        ]
      }
    }
  }
}